
	<div id="share-email" class="reveal-modal">
		<h4><: l('Email to Friends') :></h4>
		<form action="https://flash.duckduckgo.com/e.js" method="POST">
			<input type="hidden" name="type" id="type" value="fixtracking.com"/>
			<div><input type="text" placeholder="Your Name" name="from_name" class="text"/></div>
			<div><input type="email" placeholder="Your Email" name="from" class="text" /></div>
			<fieldset id="friendemails">
				<div id="friend0"><input type="email" placeholder="Your Friend's Email" name="FriendEmail0" class="text" /></div>
			</fieldset>
			<a id="remfriend" class="fieldcontrol hide">Remove friend</a>
			<a id="addfriend" class="fieldcontrol">Add more friends</a>			
			
			<fieldset id="buttons">
				<input type="submit" value="Send" class="button blue submit" />
				<input type="button" value="Cancel" class="button close-modal"/>
			</fieldset>
		</form>
	</div>